@model List<M2ICarsASP.Models.Reservation>
@using M2ICarsASP.Models
@{
    ViewBag.Title = "search";
    ViewBag.Script = "showClient.js";
}


<section class="container search-container">
    <div class="col-md-3">
        <h3>Liste des Clients</h3>
        <hr />
        @using (@Html.BeginForm("SelectClient", "SearchDriver", FormMethod.Post, new { @class = "driver-form" }))
        {
            @Html.AntiForgeryToken()

            <div class="funkyradio driver-list">
                @for (int i = 0; i < Model.Count; i++)
                {
                    
                    <div class="funkyradio-success client" pos="@Model[i].DepartureLocation">
                        @if (i == 0)
                        {
                            <input type="radio" name="clientRadio" id="@Model[i].ClientName" value="@Model[i].ReservationId" checked />
                        }
                        else
                        {
                            <input type="radio" name="clientRadio" id="@Model[i].ClientName" value="@Model[i].ReservationId" />
                        }

                        <label for="@Model[i].ClientName">@Model[i].ClientName</label>
                    </div>
                }
            </div>
            <div class="form-group">
                <div class="col-10">
                    <input id="select" type="submit" value="Choisir ce client" class="btn btn-primary" />
                </div>
            </div>
        }
        
    </div>
    <section id="map" class="col-md-9"></section>
    <img src="~/Content/Images/search.jpg" />
</section>


<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCDjKjiTE-YwsyVbG2KY4VVJF5w3F7XWt8&libraries=places&callback=initAutocomplete"
        async defer></script>

