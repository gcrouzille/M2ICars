@model M2ICarsASP.Models.Driver

@{
    ViewBag.Script = "ClientAccount.js";
    ViewBag.Title = "Gestion Compte Prestataire";
}


<div class="container account-container">
    <h2>Gestion du Compte</h2>
    <div class="col-md-12 inner-account-container container">
        <h4>Informations personnelles</h4>
        @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-md-6">
                <div class="form-inline container account-form-inline">
                    <label class="col-md-2" for="Email">Mail</label>
                    <input type="text" id="Email" name="Email" class="form-control col-md-3" value="@Model.Email" />
                </div>

                <div class="form-inline container account-form-inline">
                    <label class="col-md-2" for="LastName">Nom</label>
                    <input type="text" id="LastName" name="LastName" class="form-control col-md-3" value="@Model.LastName" />
                </div>

                <div class="form-inline container account-form-inline">
                    <label class="col-md-2" for="FirstName">Prenom</label>
                    <input type="text" id="FirstName" name="FirstName" class="form-control col-md-3" value="@Model.FirstName" />
                </div>

                <div class="form-inline container account-form-inline">
                    <label class="col-md-2" for="Gender">Genre</label>
                    @*@Html.EnumDropDownListFor(model => model.Gender, new { @class = "form-control col-md-2" })*@
                </div>

                <div class="form-inline container account-form-inline">
                    <label class="col-md-2" for="Birthday">Date de naissance</label>
                    <input type="text" id="Birthday" class="form-control col-md-3" name="Birthday" value="@Model.Birthday.ToString("d")" />
                </div>

                <div class="form-inline container account-form-inline">
                    <label class="col-md-2" for="Phone">Téléphone</label>
                    <input type="text" id="Phone" name="Phone" class="form-control col-md-3" value="@Model.Phone" />
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-inline container">
                    <img id="profileImg" src="@Url.Content("~/Content/Images/" + Model.PhotoUrl)" height="200" width="200" />
                </div>

                <div>
                    <label for="imageURL" class="label-file">Choisir une image</label>
                    <input type="file" id="imageURL" class="input-file" name="PhotoUrl" value="" />
                </div>
            </div>

            <input type="submit" class="btn btn-primary col-md-offset-4 col-md-3 account-btn" value="Enregistrer les modifications" />
        }

        <br /><br /><h4>Informations sur le Véhicule</h4><br /><br />

        <div class="row">
            <div class="col">Marque Véhicule :</div>
            <div class="col"><input type="text" name="carbrand" value="@Model.CarBrand" /></div>
        </div>

        <div class="row">
            <div class="col">Type Véhicule :</div>
            <div class="col"><input type="text" name="cartype" value="@Model.CarType" /></div>
        </div>

        <div class="row">
            <div class="col">Modèle :</div>
            <div class="col"><input type="text" name="carmodel" value="@Model.CarModel" /></div>
        </div>

        <div class="row">
            <div class="col">Immatriculation :</div>
            <div class="col"><input type="text" name="numberplate" value="@Model.Immatriculation" /></div>
        </div>

        <div class="row">
            <div class="col">Validation :</div>
            <div class="col">@Model.RegisterState</div>
        </div>

        <br /><br />

        <button type="button" class="btn btn-primary btn-lg btn-block">Modifier et Valider</button>

        <br /><br /><h4>Redéfinir adresse mail & mot de passe</h4><br /><br />

        <div class="row">
            <div class="col"> Adresse Email actuelle :</div>
            <div class="col">@Model.Email</div>
        </div>
        <div class="row">
            <div class="col"> Nouvelle adresse Email :</div>
            <div class="col"><input type="text" name="newmail" /></div>
        </div>

        <br /><br />

        <input type="submit" class="btn btn-warning" name="mailconfirm" value="Modifier adresse email" />

        <br /><br />

        <div class="row">
            <div class="col"> Ancien mot de passe :</div>
            <div class="col"><input type="password" name="oldpass" /></div>
        </div>
        <div class="row">
            <div class="col"> Nouveau mot de passe :</div>
            <div class="col"><input type="password" name="newpass" /></div>
        </div>

        <br /><br />

        <input type="submit" class="btn btn-warning" name="passconfirm" value="Modifier Mot de passe" />

    </div>
</div>


