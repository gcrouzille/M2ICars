@{
    ViewBag.Title = "Accueil";
}

<!DOCTYPE html>

<html lang="fr">

    <head>

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
        <meta name="viewport" content="width=device-width" initial-scale=1, shrink-to-fit="no" />

        <title>Accueil</title>

    </head>

    <body>

        <div class="container">

        @using (Html.BeginForm("Login", "Home", "FormMethod.Post"))
        {
             @Html.AntiForgeryToken()

             <div class="row">
                <div class="col">Email : </div>
                <div class="col"><input type="text" name="email" value="Votre adresse email"/></div>
             </div>

             <div class="row">
                <div class="col">Mot de passe : </div>
                <div class="col"><input type="password" name="password"/></div>
             </div>

             <div class="row">
                <input type="submit" value="Se connecter" />
                 @Html.ActionLink("Créer Compte Client", "Register", "Home", new { area = "" }, new { @class = "btn btn-primary" })
                 @Html.ActionLink("Créer Compte Prestataire", "RegisterPrest", "Home", new { area = "" }, new { @class = "btn btn-primary" })
             </div>
         }

        </div>

    </body>

</html>