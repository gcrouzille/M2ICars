<Page x:Class="M2ICarsWPF.View.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:M2ICarsWPF.View"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="Home">

    <StackPanel Background="#FF6B9BCB">
        <Label HorizontalAlignment="Center" FontSize="36" Margin="0,50,0,0" Foreground="#FFFEFEFE" BorderBrush="#FFFEFEFE" FontWeight="Bold" BorderThickness="0,0,0,5" Width="800" HorizontalContentAlignment="Center" Padding="5,5,5,15">Bienvenue</Label>
        <Button Width="200" Height="40" Margin="0,100,0,20" Click="ManageUser">Gestion Clients</Button>
        <Button Width="200" Height="40" Margin="0,0,0,20" Click="ManageDriver">Gestion Chauffeurs</Button>
        <Button Width="200" Height="40" Click="ManageReservation">Gestion Réservations</Button>
    </StackPanel>
</Page>
